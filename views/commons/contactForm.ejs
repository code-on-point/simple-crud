<div class="card">
  <div class="card-body">
    <form method="post" action="/contact">
      <div class="form-group">
        <label for="exampleFormControlInput1">Name</label>
        <input name="username" type="text" class="form-control" id="nameInput" placeholder="Full Name">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Email address</label>
        <input name="email" type="email" class="form-control" id="emailInput" placeholder="name@example.com">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Message</label>
        <textarea name="message" class="form-control" id="MessageInput" rows="3"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" value="Submit">
      </div>
    </form>
  </div>
</div>
